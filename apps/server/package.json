    "@hono/zod-openapi": "^1.1.5",
    "@libsql/client": "^0.15.15",
    "@neondatabase/serverless": "^1.0.2",
    "@scalar/hono-api-reference": "^0.9.25",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.6",
    "hono-pino": "^0.10.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "stoker": "^2.0.1",
    "zod": "^4.1.12",
    "@bt-turbo-setup/auth": "workspace:*",
    "@bt-turbo-setup/db": "workspace:*"
